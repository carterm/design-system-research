<!doctype html>
<html lang="en">
  <head>
    <title>{{ title }}</title>
    <meta charset="utf-8" />
    <meta name="Author" content="Carter Medlin" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, minimum-scale=1.0" />

    <script type="module" src="/js/eureka.core.min.js"></script>
    <style>
      *:not(:defined) {
       display:none; /* Prevents Flicker for Eureka components before they are defined */
      }
    </style>
  </head>
  <body>
    <h1>{{ title }}</h1>
    <p>{{description}}</p>

    <cal-ds-nav>
      <nav>
        <ul>
          <li><a href="/accordion/" data-selected>Accordion</a></li>
          <li><a href="/cards/">Cards</a></li>
        </ul>
      </nav>
    </cal-ds-nav>

    <a href="/">Home</a>
    <cal-ds-seo
      data-title="{{ title }}"
      data-description="{{ description }}"
      data-canonical-params="id,q"></cal-ds-seo>
    {% block content -%} {{ content | safe }} {%- endblock -%}
  </body>
</html>
